 ResourceDisk.Filesystem=ext4
 
 # Mount point for the resource disk
-ResourceDisk.MountPoint=/mnt/resource
+ResourceDisk.MountPoint=/mnt
 
 # Create and use swapfile on resource disk.
 ResourceDisk.EnableSwap=n
